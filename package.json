{
  "name": "mindtrackapp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:api\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:api": "npm run dev --workspace=api",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspace=api"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
