{
  "public": true,
  "github": {
    "enabled": true,
    "silent": false
  },
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "apps/api/package.json",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_URL": "https://mindtrackapp.vercel.app/api/v1",
    "DATABASE_URL": "postgresql://mindtrack_db_owner:npg_sNtp0DQfH3ZI@ep-royal-snow-a2zqq5un-pooler.eu-central-1.aws.neon.tech/mindtrack_db?sslmode=require",
    "JWT_SECRET": "mindtrack_jwt_secret_key_for_development",
    "JWT_EXPIRES_IN": "24h",
    "EMAIL_SERVICE": "gmail",
    "EMAIL_USER": "mindtrackapp@gmail.com",
    "EMAIL_PASSWORD": "mindtrack_app_password",
    "EMAIL_HOST": "smtp.gmail.com",
    "EMAIL_PORT": "587",
    "EMAIL_FROM": "MindTrack <mindtrackapp@gmail.com>",
    "LOG_LEVEL": "debug",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX": "100",
    "CORS_ORIGIN": "https://mindtrackapp.vercel.app",
    "FRONTEND_URL": "https://mindtrackapp.vercel.app",
    "AI_MODEL": "gpt-4"
  },
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "apps/api/src/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization"
      }
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/$1"
    }
  ]
}
